# Portfolio MCP Server - Environment Configuration

# ============================================================
# AUTHENTICATION SETTINGS
# ============================================================

# API Key for authenticating requests to the MCP server
# REQUIRED in production. Generate a secure random key (e.g., using openssl rand -hex 32)
MCP_API_KEY=your-secure-api-key-here

# Enable/disable authentication (true/false)
# Set to false only for testing in completely isolated environments
MCP_AUTH_ENABLED=true

# Development mode - bypasses authentication for local testing
# WARNING: Never set to true in production!
MCP_DEV_MODE=false

# ============================================================
# SERVER SETTINGS
# ============================================================

# Server name displayed in MCP protocol
MCP_SERVER_NAME=Portfolio MCP Server

# Server host and port for HTTP transport
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# ============================================================
# DATA STORAGE SETTINGS
# ============================================================

# Directory where portfolio data files will be stored
# Will be created automatically if it doesn't exist
MCP_DATA_DIR=./portfolio_data

# Database mode: "cosmos" for Azure Cosmos DB, "file" for local file storage
DATABASE_MODE=cosmos

# ============================================================
# AZURE COSMOS DB SETTINGS
# ============================================================

# Cosmos DB endpoint URL
# For Azure: https://your-account.documents.azure.com:443/
# For Emulator: https://localhost:8081
COSMOS_ENDPOINT=https://localhost:8081

# Cosmos DB access key
# For Emulator, use the default key:
# C2y6yDjf5/R+ob0N8A7Cgv30VRDJIWEHLM+4QDU5DE2nQ9nDuVTqobD4b8mGGyPMbIZnqyMsEcaGQy67XIw/Jw==
COSMOS_KEY=C2y6yDjf5/R+ob0N8A7Cgv30VRDJIWEHLM+4QDU5DE2nQ9nDuVTqobD4b8mGGyPMbIZnqyMsEcaGQy67XIw/Jw==

# Cosmos DB database name
COSMOS_DATABASE_NAME=portfolio-mcp

# ============================================================
# LOGGING SETTINGS
# ============================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MCP_LOG_LEVEL=INFO

# Log authentication attempts (true/false)
# Useful for security auditing and debugging
MCP_LOG_AUTH_ATTEMPTS=true

# ============================================================
# QUICK START EXAMPLES
# ============================================================

# Example 1: Production setup with Azure Cosmos DB
# MCP_API_KEY=abc123xyz789securekey
# MCP_AUTH_ENABLED=true
# MCP_DEV_MODE=false
# DATABASE_MODE=cosmos
# COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
# COSMOS_KEY=your-cosmos-key-here
# COSMOS_DATABASE_NAME=portfolio-mcp

# Example 2: Local development with Cosmos DB Emulator
# MCP_API_KEY=test-key-123
# MCP_AUTH_ENABLED=true
# MCP_DEV_MODE=true
# DATABASE_MODE=cosmos
# COSMOS_ENDPOINT=https://localhost:8081
# COSMOS_KEY=C2y6yDjf5/R+ob0N8A7Cgv30VRDJIWEHLM+4QDU5DE2nQ9nDuVTqobD4b8mGGyPMbIZnqyMsEcaGQy67XIw/Jw==
# COSMOS_DATABASE_NAME=portfolio-mcp

# Example 3: File-based storage (no Cosmos DB)
# MCP_API_KEY=test-key-123
# MCP_AUTH_ENABLED=true
# MCP_DEV_MODE=false
# DATABASE_MODE=file
# MCP_DATA_DIR=./portfolio_data
